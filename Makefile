##################################################
# Variables ######################################
##################################################

#Emacs=emacs
Emacs=./result/bin/emacs

Options=--debug-init --no-desktop --maximized --no-splash --name=SBoo

##################################################
# Default ########################################
##################################################
default: run

.PHONY: default

##################################################
# Install Dependencies ###########################
##################################################
configure:
	@exec nix-build

.PHONY: configure

##################################################
# Test ###########################################
##################################################
test: configure
	@exec $(Emacs) $(Options)

.PHONY: test

##################################################